/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.index-info {
  width: 100%;
  height: auto;
}

/* header */

.header {
  background-color: #4fcc70;
  color: #fff;
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-left {
  display: flex;
  justify-content: center;
  align-items: center;
}

.header image {
  width: 38rpx;
  height: 38rpx;
}

/* banner */

.banner, swiper {
  height: 420rpx;
}

.banner .slide-image {
  width: 750rpx;
  height: 420rpx;
}

/* describe */

.describe image {
  width: 700rpx;
  height: 380rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(0, 0, 0, .1);
}

.describe .height-normal {
  border-radius: 10rpx;
  text-align: center;
  line-height: 75rpx;
  margin: 20rpx 0;
  background-color: #4fcc70;
  color: #fff;
}

/* 景区展示 */

.attraction .list-title {
  border-top: 1rpx solid rgba(0, 0, 0, .1);
  margin-top: 40rpx;
  line-height: 100rpx;
}

.attraction .list-wrap .list-item {
  width: 345rpx;
  color: #707070;
  margin: 10rpx 0;
}

.attraction .list-wrap .list-item image {
  width: 345rpx;
  height: 200rpx;
  border-radius: 20rpx;
}