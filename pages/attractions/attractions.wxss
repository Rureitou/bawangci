/* pages/attractions/attractions.wxss */

/* 景区展示 */

.attraction .list-title {
  margin-top: 20rpx;
  line-height: 100rpx;
}

.attraction .list-wrap .list-item {
  width: 345rpx;
  color: #707070;
  margin: 10rpx 0;
}

.attraction .list-wrap .list-item image {
  width: 345rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.attraction .list-wrap {
  border-bottom: 1rpx solid #ccc;
  padding-bottom: 20rpx;
}
.attraction:last-child .list-wrap {
  border-bottom: none;
}